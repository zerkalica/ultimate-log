{
	"logger.transport.console": {
		"class": "UltimateLogger.Transports.console",
		"options": {}
	},
	"logger.transport.file.all": {
		"class": "UltimateLogger.Transports.file",
		"options": {
			"fileName": "%log.dir%/all.log",
			"formatter": "@logger.formatter.token-formatter"
		}
	},
	"logger.transport.file.error": {
		"class": "UltimateLogger.Transports.file",
		"options": {
			"fileName": "%log.dir%/error.log",
			"formatter": "@logger.formatter.token-formatter"
		}
	},
	"logger.filter.type.all": {
		"class": "UltimateLogger.Filters.type",
		"options": {
			"types": ["debug", "info", "warn", "error"]
		}
	},
	"logger.filter.type.error": {
		"class": "UltimateLogger.Filters.type",
		"options": {
			"types": ["error"]
		}
	},

	"logger.master.transports.aggregator": {
		"class": "UltimateLogger.Transports.aggregator",
		"options": {
			"transports": [
				{
					"transport": "@logger.transport.console",
					"filters": ["@logger.filter.type.all"]
				},
				{
					"transport": "@logger.transport.file.all",
					"filters": ["@logger.filter.type.all"]
				}
			]
		}
	},
	"logger.master.transports": [
		{
			"transport": "@logger.master.transports.aggregator"
		}
	],

	"logger.master": {
		"class": "UltimateLogger.Logger",
		"options": {
			"loggerSession": "@logger.session.default",
			"sessionLifeTime": 10000,
			"transports": "@logger.master.transports"
		}
	},

	"logger.master.ipc-worker-listener": {
		"class": "UltimateLogger.Listeners.ipc",
		"tag": "logger.worker-listener",
		"options": {
			"rpcNamespace": "ultimate-logger",
			"logger": "@logger.master"
		}
	},

	"logger.master.std-worker-listener": {
		"class": "UltimateLogger.Listeners.std",
		"tag": "logger.worker-listener",
		"options": {
			"logger": "@logger.master"
		}
	}
}
