{
	"logger.transport.console": {
		"require": "%ultimate-logger.libdir%/transports/console-transport",
		"options": {}
	},
	"logger.transport.file.all": {
		"require": "%ultimate-logger.libdir%/transports/file-transport",
		"options": {
			"fileName": "%log.dir%/all.log"
		}
	},
	"logger.transport.file.error": {
		"require": "%ultimate-logger.libdir%/transports/file-transport",
		"options": {
			"fileName": "%log.dir%/error.log"
		}
	},
	"logger.filter.type.all": {
		"require": "%ultimate-logger.libdir%/filters/type-filter",
		"options": {
			"types": ["debug", "info", "warn", "error"]
		}
	},
	"logger.filter.type.error": {
		"require": "%ultimate-logger.libdir%/filters/type-filter",
		"options": {
			"types": ["error"]
		}
	},
	"logger.aggregator.id": {
		"require": "%ultimate-logger.libdir%/aggregators/id-aggregator",
		"options": {}
	},

	"logger.master.transports": [
		{
			"transport": "@logger.transport.console",
			"filters": ["@logger.filter.type.all"]
		},
		{
			"transport": "@logger.transport.file.all",
			"filters": ["@logger.filter.type.all"]
		}
	],

	"logger.master": {
		"require": "%ultimate-logger.libdir%/logger",
		"options": {
			"loggerSession": "@logger.session.default",
			"serialize": "@logger.serializer.node-serialize",
			"sessionLifeTime": 10000,
			"aggregators": {
				"request": "@logger.aggregator.id"
			},
			"transports": "@logger.master.transports"
		}
	},

	"logger.master.ipc-worker-listener": {
		"require": "%ultimate-logger.libdir%/worker-listeners/ipc-listener",
		"tag": "logger.worker-listener",
		"options": {
			"rpcNamespace": "ultimate-logger",
			"logger": "@logger.master"
		}
	},

	"logger.master.std-worker-listener": {
		"require": "%ultimate-logger.libdir%/worker-listeners/std-listener",
		"tag": "logger.worker-listener",
		"options": {
			"rpcNamespace": "ultimate-logger",
			"logger": "@logger.master"
		}
	}
}
